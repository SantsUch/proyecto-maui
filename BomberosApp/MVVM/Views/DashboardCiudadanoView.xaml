<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BomberosApp.MVVM.Views.DashboardCiudadanoView"
             Title="Panel Ciudadano"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header con bienvenida -->
            <Frame BackgroundColor="#1649A1" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding UsuarioActual.Nombre, StringFormat='Bienvenido, {0}'}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Â¿QuÃ© necesita hacer hoy?"
                           FontSize="16"
                           TextColor="#FFD700"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- EstadÃ­sticas rÃ¡pidas -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto"
                  ColumnSpacing="15">

                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding TotalIncidentes}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#E31E24"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Reportes Totales"
                               FontSize="12"
                               TextColor="#666"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="1"
                       BackgroundColor="White"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding IncidentesActivos}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#FF8C00"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="En Proceso"
                               FontSize="12"
                               TextColor="#666"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Acciones principales -->
            <Label Text="Acciones Principales"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1649A1"
                   Margin="0,10,0,0"/>

            <Button Text="ðŸ“¢ Reportar Nuevo Incidente"
                    Command="{Binding ReportarIncidenteCommand}"
                    BackgroundColor="#E31E24"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="12"/>

            <Button Text="ðŸ“‹ Ver Mis Reportes"
                    Command="{Binding VerHistorialCommand}"
                    BackgroundColor="#1649A1"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="12"/>

            <!-- Incidentes recientes -->
            <Label Text="Mis Reportes Recientes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1649A1"
                   Margin="0,20,0,0"/>

            <CollectionView ItemsSource="{Binding IncidentesRecientes}"
                           HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="8"
                               Padding="15"
                               Margin="0,5"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="{Binding Titulo}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#333"/>
                                    <Label Text="{Binding FechaReportado, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="12"
                                           TextColor="#666"/>
                                    <Label Text="{Binding Estado}"
                                           FontSize="12"
                                           TextColor="#E31E24"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1"
                                        Text="Ver"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VerDetalleCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FFD700"
                                        TextColor="Black"
                                        FontSize="12"
                                        WidthRequest="60"
                                        HeightRequest="35"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botones adicionales -->
            <VerticalStackLayout Spacing="15" Margin="0,20,0,0">
                <Button Text="ðŸ‘¤ Mi Perfil"
                        Command="{Binding VerPerfilCommand}"
                        BackgroundColor="#FFD700"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>

                <Button Text="ðŸšª Cerrar SesiÃ³n"
                        Command="{Binding CerrarSesionCommand}"
                        BackgroundColor="White"
                        TextColor="#E31E24"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"
                        BorderColor="#E31E24"
                        BorderWidth="2"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>