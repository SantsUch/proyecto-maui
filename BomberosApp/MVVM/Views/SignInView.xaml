<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BomberosApp.MVVM.ViewModels"
             x:Class="BomberosApp.MVVM.Views.SignInView"
             Title="Registro de Usuario"
             BackgroundColor="#385FA1">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Frame Padding="20"
                   BackgroundColor="White"
                   BorderColor="#FFD700"
                   CornerRadius="12"
                   HasShadow="True"
                   Margin="0,0,0,10">

                <VerticalStackLayout Spacing="15">
                    <Label Text="Cree una cuenta para acceder al sistema"
                           FontSize="18"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />

                    <Label Text="Nombre completo" TextColor="#1649A1" FontSize="16"/>
                    <Entry Placeholder="Juan Pérez"
                           Text="{Binding Usuario.Nombre}"
                           BackgroundColor="#F0F0F0"
                           HeightRequest="45"
                           FontSize="14"/>

                    <Label Text="Correo electrónico" TextColor="#1649A1" FontSize="16"/>
                    <Entry Placeholder="ejemplo@correo.com"
                           Keyboard="Email"
                           Text="{Binding Usuario.Correo}"
                           BackgroundColor="#F0F0F0"
                           HeightRequest="45"
                           FontSize="14"/>

                    <Label Text="Contraseña" TextColor="#1649A1" FontSize="16"/>
                    <Entry Placeholder="••••••••"
                           IsPassword="True"
                           Text="{Binding Usuario.Contrasena}"
                           BackgroundColor="#F0F0F0"
                           HeightRequest="45"
                           FontSize="14"/>

                    <Label Text="Confirmar contraseña" TextColor="#1649A1" FontSize="16"/>
                    <Entry Placeholder="••••••••"
                           IsPassword="True"
                           Text="{Binding ConfirmarContrasena}"
                           BackgroundColor="#F0F0F0"
                           HeightRequest="45"
                           FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Registrar"
                    Command="{Binding RegistrarCommand}"
                    BackgroundColor="#FFD700"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    FontSize="18"
                    HeightRequest="50"
                    BorderColor="Black"
                    BorderWidth="1.5"/>

            <Button Text="Volver"
                    Command="{Binding CancelarCommand}"
                    BackgroundColor="White"
                    TextColor="#1649A1"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    FontSize="18"
                    HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
