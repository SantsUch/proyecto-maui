<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BomberosApp.Converters"
             x:Class="BomberosApp.MVVM.Views.VisualizarIncidentesView"
             Title="Gestión de Incidentes"
             BackgroundColor="#F5F5F5">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:Base64ToImageSourceConverter x:Key="Base64Converter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="#1649A1"
               CornerRadius="15"
               Padding="20"
               Margin="15,15,15,0"
               HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <Label Text="Gestión de Incidentes"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Visualizar y gestionar incidentes del sistema"
                       FontSize="14"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>

                <Grid ColumnDefinitions="*,60" ColumnSpacing="10">
                    <Picker Grid.Column="0"
                            Title="Filtrar por estado"
                            ItemsSource="{Binding EstadosFiltro}"
                            SelectedItem="{Binding EstadoFiltroSeleccionado}"
                            BackgroundColor="White"
                            TextColor="Black"/>

                    <Button Grid.Column="1"
                            Text="🔄"
                            Command="{Binding ActualizarListaCommand}"
                            BackgroundColor="#FFD700"
                            TextColor="Black"
                            FontSize="16"
                            HeightRequest="40"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de incidentes -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding TodosLosIncidentes}"
                        Margin="15,10,15,0"
                        SelectionMode="Single"
                        SelectedItem="{Binding IncidenteSeleccionado}">

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="20">
                    <Label Text="📋"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No hay incidentes"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No se encontraron incidentes con el filtro seleccionado"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                            <Label Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="{Binding Titulo}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333"
                                   Margin="0,0,0,5"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding UsuarioNombre, StringFormat='Reportado por: {0}'}"
                                   FontSize="12"
                                   TextColor="#999"/>

                            <Frame Grid.Row="2" Grid.Column="0"
                                   BackgroundColor="#FF8C00"
                                   CornerRadius="15"
                                   Padding="8,4"
                                   HasShadow="False"
                                   HorizontalOptions="Start"
                                   Margin="0,5,0,0">
                                <Label Text="{Binding Estado, TargetNullValue='Reportado'}"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>

                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="{Binding FechaReportado, StringFormat='📅 {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="14"
                                   TextColor="#666"
                                   Margin="0,5,0,0"/>

                            <Label Grid.Row="4" Grid.Column="0"
                                   Text="{Binding FuncionarioAsignadoNombre, StringFormat='👨‍🚒 {0}', TargetNullValue='👨‍🚒 Sin asignar'}"
                                   FontSize="12"
                                   TextColor="#666"
                                   Margin="0,2,0,0"/>

                            <VerticalStackLayout Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" VerticalOptions="Center" Spacing="8">

                                <!-- Botón Ver Detalles -->
                                <Button Text="Ver"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarIncidenteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#1649A1"
                                        TextColor="White"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        WidthRequest="80"
                                        HeightRequest="40"
                                        CornerRadius="8"/>

                                <!-- Botón Eliminar - Solo para incidentes resueltos -->
                                <Button Text="Eliminar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarIncidenteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#E31E24"
                                        TextColor="White"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        WidthRequest="80"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        IsVisible="False">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding Estado}" Value="Resuelto">
                                            <Setter Property="IsVisible" Value="True" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Panel de detalles del incidente -->
        <Frame Grid.Row="2"
               BackgroundColor="White"
               CornerRadius="15"
               Padding="20"
               Margin="15"
               HasShadow="True"
               IsVisible="{Binding MostrarDetallesIncidente}">
            <ScrollView>
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Detalles del Incidente"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#1649A1"/>
                        <Button Grid.Column="1"
                                Text="✕"
                                Command="{Binding CerrarDetallesCommand}"
                                BackgroundColor="Transparent"
                                TextColor="#E31E24"
                                FontSize="18"
                                WidthRequest="30"
                                HeightRequest="30"/>
                    </Grid>

                    <Frame BackgroundColor="#F8F9FA"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="10">

                            <Label Text="{Binding TituloIncidenteSeleccionado}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding DescripcionIncidenteSeleccionado, StringFormat='Descripción: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding UbicacionIncidenteSeleccionado, StringFormat='Ubicación: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding FechaIncidenteSeleccionado, StringFormat='Fecha: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <Label Text="{Binding EstadoIncidenteSeleccionado, StringFormat='Estado: {0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#E31E24"/>

                            <Label Text="{Binding FuncionarioAsignado, StringFormat='Funcionario: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <Label Text="{Binding CategoriaIncidente, StringFormat='Categoría: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <Label Text="{Binding PrioridadIncidente, StringFormat='Prioridad: {0}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <!-- Imagen del incidente si existe -->
                            <Frame IsVisible="{Binding MostrarImagenIncidente}"
                                   BackgroundColor="White"
                                   CornerRadius="8"
                                   Padding="5"
                                   HasShadow="True"
                                   HeightRequest="200">
                                <Image Source="{Binding ImagenIncidenteBase64, Converter={StaticResource Base64Converter}}"
                                       Aspect="AspectFill"
                                       HeightRequest="190"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>