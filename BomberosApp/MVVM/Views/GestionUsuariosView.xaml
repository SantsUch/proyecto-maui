<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BomberosApp.MVVM.Views.GestionUsuariosView"
             Title="Gestión de Usuarios"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="#1649A1"
               CornerRadius="15"
               Padding="20"
               Margin="15,15,15,0"
               HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="Gestión de Usuarios"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Picker Grid.Column="0"
                            Title="Filtrar por rol"
                            ItemsSource="{Binding RolesFiltro}"
                            SelectedItem="{Binding RolFiltroSeleccionado}"
                            BackgroundColor="White"
                            TextColor="Black"/>

                    <Button Grid.Column="1"
                            Text="+ Crear"
                            Command="{Binding CrearUsuarioCommand}"
                            BackgroundColor="#FFD700"
                            TextColor="Black"
                            FontSize="14"
                            HeightRequest="40"
                            WidthRequest="80"
                            CornerRadius="8"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de usuarios -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding UsuariosFiltrados}"
                       Margin="15,10,15,0">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Spacing="15">
                    <Label Text="👥"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No hay usuarios para mostrar"
                           FontSize="18"
                           TextColor="#666"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="5">

                                <Label Text="{Binding Nombre}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Text="{Binding Correo}"
                                       FontSize="14"
                                       TextColor="#666"/>

                                <Frame BackgroundColor="{Binding RolColor}"
                                       CornerRadius="10"
                                       Padding="8,4"
                                       HasShadow="False"
                                       HorizontalOptions="Start">
                                    <Label Text="{Binding Rol}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </Frame>
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Text="✏️"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarUsuarioCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#1649A1"
                                    TextColor="White"
                                    FontSize="16"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    Margin="5,0"/>

                            <Button Grid.Column="2"
                                    Text="🗑️"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarUsuarioCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#E31E24"
                                    TextColor="White"
                                    FontSize="16"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    IsVisible="{Binding PuedeEliminar}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Panel de creación/edición -->
        <Frame Grid.Row="2"
               BackgroundColor="White"
               CornerRadius="15"
               Padding="20"
               Margin="15"
               HasShadow="True"
               IsVisible="{Binding MostrarFormulario}">

            <VerticalStackLayout Spacing="15">
                <Label Text="{Binding TituloFormulario}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#1649A1"
                       HorizontalTextAlignment="Center"/>

                <!-- Nombre -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nombre completo"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1649A1"/>
                    <Frame BackgroundColor="#F0F0F0"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False">
                        <Entry Text="{Binding UsuarioFormulario.Nombre}"
                               Placeholder="Ingrese nombre completo"
                               BackgroundColor="Transparent"
                               FontSize="14"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Correo -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Correo electrónico"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1649A1"/>
                    <Frame BackgroundColor="#F0F0F0"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False">
                        <Entry Text="{Binding UsuarioFormulario.Correo}"
                               Placeholder="ejemplo@bomberos.go.cr"
                               Keyboard="Email"
                               BackgroundColor="Transparent"
                               FontSize="14"
                               IsReadOnly="{Binding EsEdicion}"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Contraseña -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Contraseña"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1649A1"/>
                    <Frame BackgroundColor="#F0F0F0"
                           CornerRadius="8"
                           Padding="5"
                           HasShadow="False">
                        <Entry Text="{Binding UsuarioFormulario.Contrasena}"
                               Placeholder="Mínimo 6 caracteres"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               FontSize="14"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Rol -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Rol del usuario"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1649A1"/>
                    <Frame BackgroundColor="#F0F0F0"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <Picker ItemsSource="{Binding RolesDisponibles}"
                                SelectedItem="{Binding UsuarioFormulario.Rol}"
                                Title="Seleccione un rol"
                                BackgroundColor="Transparent"
                                FontSize="14"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Botones -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="{Binding TextoBotonGuardar}"
                            Command="{Binding GuardarUsuarioCommand}"
                            BackgroundColor="#1649A1"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            CornerRadius="12"/>

                    <Button Grid.Column="1"
                            Text="Cancelar"
                            Command="{Binding CancelarFormularioCommand}"
                            BackgroundColor="#E31E24"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            CornerRadius="12"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>