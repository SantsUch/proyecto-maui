<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BomberosApp.MVVM.Views.MisIncidentesAsignadosView"
             Title="Mis Incidentes Asignados"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="#1649A1"
               CornerRadius="15"
               Padding="20"
               Margin="15,15,15,0"
               HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="Mis Incidentes Asignados"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Button Text="ðŸ”„ Actualizar"
                        Command="{Binding ActualizarListaCommand}"
                        BackgroundColor="#FFD700"
                        TextColor="Black"
                        FontSize="14"
                        HeightRequest="40"
                        CornerRadius="8"
                        HorizontalOptions="Center"
                        WidthRequest="120"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de incidentes -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding MisIncidentes}"
                        Margin="15,10,15,0">

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="20">
                    <Label Text="ðŸ“‹"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No tienes incidentes asignados"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Los incidentes asignados a ti aparecerÃ¡n aquÃ­"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="8">

                            <Label Text="{Binding Titulo}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>

                            <Label Text="{Binding Descripcion}"
                                   FontSize="14"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <Frame BackgroundColor="#FF8C00"
                                   CornerRadius="15"
                                   Padding="8,4"
                                   HasShadow="False"
                                   HorizontalOptions="Start">
                                <Label Text="{Binding Estado}"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>

                            <Label Text="{Binding FechaReportado, StringFormat='ðŸ“… {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="12"
                                   TextColor="#666"/>

                            <Label Text="{Binding Ubicacion, StringFormat='ðŸ“ {0}'}"
                                   FontSize="12"
                                   TextColor="#666"/>

                            <Label Text="{Binding Prioridad, StringFormat='âš¡ Prioridad: {0}'}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#E31E24"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BotÃ³n volver -->
        <Button Grid.Row="2"
                Text="Volver"
                Command="{Binding VolverCommand}"
                BackgroundColor="#1649A1"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="45"
                CornerRadius="12"
                Margin="15"/>
    </Grid>
</ContentPage>