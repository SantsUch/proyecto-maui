<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BomberosApp.MVVM.Views.DashboardFuncionarioView"
             Title="Funcionario"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">

        <!-- Header con filtros -->
        <Frame Grid.Row="0"
               BackgroundColor="#1649A1"
               CornerRadius="15"
               Padding="20"
               Margin="15,15,15,0"
               HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <Label Text="Panel de Funcionario"
                       FontSize="16"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>

                <Label Text="{Binding Funcionario.Nombre, StringFormat='Bienvenido, {0}'}"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Incidentes Asignados"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Grid ColumnDefinitions="*,60" ColumnSpacing="10">
                    <Picker Grid.Column="0"
                            Title="Filtrar por prioridad"
                            ItemsSource="{Binding PrioridadesFiltro}"
                            SelectedItem="{Binding PrioridadSeleccionada}"
                            BackgroundColor="White"
                            TextColor="Black"/>

                    <Button Grid.Column="1"
                            Text="ðŸ”„"
                            Command="{Binding ActualizarListaCommand}"
                            BackgroundColor="#FFD700"
                            TextColor="Black"
                            FontSize="16"
                            HeightRequest="40"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de incidentes -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding IncidentesAsignados}"
                        Margin="15,10,15,0"
                        SelectionMode="None">

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="20">
                    <Label Text="ðŸš’"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No tienes incidentes asignados"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto">

                            <Label Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="{Binding Titulo}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding FechaReportado, StringFormat='ðŸ“… {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="{Binding Ubicacion, StringFormat='ðŸ“ {0}'}"
                                   FontSize="14"
                                   TextColor="#666"/>

                            <Frame Grid.Row="3" Grid.Column="0"
                                   BackgroundColor="#FF8C00"
                                   CornerRadius="15"
                                   Padding="8,4"
                                   HasShadow="False"
                                   HorizontalOptions="Start"
                                   Margin="0,5,0,0">
                                <Label Text="{Binding Prioridad}"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>

                            <Button Grid.Row="1" Grid.RowSpan="3" Grid.Column="1"
                                    Text="Detalles"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarIncidenteCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#1649A1"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    WidthRequest="90"
                                    HeightRequest="40"
                                    CornerRadius="8"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>