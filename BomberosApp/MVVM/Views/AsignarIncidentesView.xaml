<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BomberosApp.Converters"
             x:Class="BomberosApp.MVVM.Views.AsignarIncidentesView"
             Title="Asignar Incidentes"
             BackgroundColor="#F5F5F5">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:Base64ToImageSourceConverter x:Key="Base64Converter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <Frame Grid.Row="0"
               BackgroundColor="#1649A1"
               CornerRadius="15"
               Padding="20"
               Margin="15,15,15,0"
               HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <Label Text="Gestión de Incidentes"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Seleccione un incidente para asignar"
                       FontSize="14"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>

                <Grid ColumnDefinitions="*,60" ColumnSpacing="10">
                    <Picker Grid.Column="0"
                            Title="Estado"
                            ItemsSource="{Binding EstadosFiltro}"
                            SelectedItem="{Binding EstadoFiltroSeleccionado}"
                            BackgroundColor="White"
                            TextColor="Black"/>

                    <Button Grid.Column="1"
                            Text="🔄"
                            Command="{Binding ActualizarListaCommand}"
                            BackgroundColor="#FFD700"
                            TextColor="Black"
                            FontSize="16"
                            HeightRequest="40"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding IncidentesSinAsignar}"
                        Margin="15,10,15,0"
                        SelectionMode="Single"
                        SelectedItem="{Binding IncidenteSeleccionado}">

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="20">
                    <Label Text="✅"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="¡Excelente!"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No hay incidentes pendientes de asignar"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                            <Label Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="{Binding Titulo}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333"
                                   Margin="0,0,0,5"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding Id, StringFormat='ID: {0}'}"
                                   FontSize="12"
                                   TextColor="#999"/>

                            <Frame Grid.Row="2" Grid.Column="0"
                                   BackgroundColor="#FF8C00"
                                   CornerRadius="15"
                                   Padding="8,4"
                                   HasShadow="False"
                                   HorizontalOptions="Start"
                                   Margin="0,5,0,0">
                                <Label Text="{Binding Estado, TargetNullValue='Sin Asignar'}"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>

                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="{Binding FechaReportado, StringFormat='📅 {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="14"
                                   TextColor="#666"
                                   Margin="0,5,0,0"/>

                            <Label Grid.Row="4" Grid.Column="0"
                                   Text="{Binding Ubicacion, StringFormat='📍 {0}'}"
                                   FontSize="14"
                                   TextColor="#666"
                                   Margin="0,2,0,0"/>

                            <VerticalStackLayout Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" VerticalOptions="Center" Spacing="5">

                                <Button Text="Asignar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarIncidenteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#1649A1"
                                        TextColor="White"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        WidthRequest="80"
                                        HeightRequest="40"
                                        CornerRadius="8"/>

                                <!-- RESTAURADO: Botón Estado - Tanto admin como bomberos pueden cambiar estados -->
                                <Button Text="Estado"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CambiarEstadoCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FFD700"
                                        TextColor="Black"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        WidthRequest="80"
                                        HeightRequest="35"
                                        CornerRadius="8"/>

                                <Button Text="Eliminar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarIncidenteCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#E31E24"
                                        TextColor="White"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        WidthRequest="80"
                                        HeightRequest="40"
                                        CornerRadius="8"/>

                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Panel de asignación CON DETALLES DEL INCIDENTE -->
        <Frame Grid.Row="2"
               BackgroundColor="White"
               CornerRadius="15"
               Padding="20"
               Margin="15"
               HasShadow="True"
               IsVisible="{Binding MostrarPanelAsignacion}">
            <ScrollView>
                <VerticalStackLayout Spacing="20">
                    <Label Text="Asignar Incidente"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1649A1"
                           HorizontalTextAlignment="Center"/>

                    <!-- NUEVA SECCIÓN: Detalles del incidente seleccionado -->
                    <Frame BackgroundColor="#F8F9FA"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Detalles del Incidente"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1649A1"/>

                            <Label Text="{Binding TituloIncidenteSeleccionado}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#333"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding DescripcionIncidenteSeleccionado, StringFormat='Descripción: {0}'}"
                                   FontSize="12"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding UbicacionIncidenteSeleccionado, StringFormat='Ubicación: {0}'}"
                                   FontSize="12"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <Label Text="{Binding FechaIncidenteSeleccionado, StringFormat='Fecha: {0}'}"
                                   FontSize="12"
                                   TextColor="#666"/>

                            <!-- Imagen del incidente si existe -->
                            <Frame IsVisible="{Binding MostrarImagenIncidente}"
                                   BackgroundColor="White"
                                   CornerRadius="8"
                                   Padding="5"
                                   HasShadow="True"
                                   HeightRequest="150">
                                <Image Source="{Binding ImagenIncidenteBase64, Converter={StaticResource Base64Converter}}"
                                       Aspect="AspectFit"
                                       HeightRequest="140"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>

                    <Label Text="{Binding TituloIncidenteSeleccionado}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Categoría del Incidente"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1649A1"/>
                        <Frame BackgroundColor="#F0F0F0"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Picker ItemsSource="{Binding CategoriasDisponibles}"
                                    SelectedItem="{Binding CategoriaSeleccionada}"
                                    Title="Seleccione una categoría"
                                    BackgroundColor="Transparent"
                                    TextColor="#333"
                                    FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Prioridad"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1649A1"/>
                        <Frame BackgroundColor="{Binding PrioridadColorFondo}"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Picker ItemsSource="{Binding PrioridadesDisponibles}"
                                    SelectedItem="{Binding PrioridadSeleccionada}"
                                    Title="Seleccione la prioridad"
                                    BackgroundColor="Transparent"
                                    TextColor="{Binding PrioridadColorTexto}"
                                    FontSize="14"
                                    FontAttributes="Bold"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Asignar a Funcionario"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1649A1"/>
                            <Button Grid.Column="1"
                                    Text="🔄"
                                    Command="{Binding ActualizarFuncionariosCommand}"
                                    BackgroundColor="#FFD700"
                                    TextColor="Black"
                                    FontSize="12"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    CornerRadius="15"/>
                        </Grid>
                        <Frame BackgroundColor="#F0F0F0"
                               CornerRadius="8"
                               Padding="0"
                               HasShadow="False">
                            <Picker ItemsSource="{Binding FuncionariosDisponibles}"
                                    SelectedItem="{Binding FuncionarioSeleccionado}"
                                    ItemDisplayBinding="{Binding Nombre}"
                                    Title="Seleccione un funcionario"
                                    BackgroundColor="Transparent"
                                    TextColor="#333"
                                    FontSize="14"/>
                        </Frame>
                        <Label Text="{Binding MensajeFuncionarios}"
                               FontSize="10"
                               TextColor="#999"
                               IsVisible="{Binding MostrarMensajeFuncionarios}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Observaciones (Opcional)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1649A1"/>
                        <Frame BackgroundColor="#F0F0F0"
                               CornerRadius="8"
                               Padding="5"
                               HasShadow="False">
                            <Editor Placeholder="Ingrese observaciones adicionales..."
                                    Text="{Binding ObservacionesAsignacion}"
                                    HeightRequest="80"
                                    BackgroundColor="Transparent"
                                    TextColor="#333"
                                    FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <Button Grid.Column="0"
                                Text="Confirmar Asignación"
                                Command="{Binding ConfirmarAsignacionCommand}"
                                BackgroundColor="#1649A1"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="45"
                                CornerRadius="12"/>

                        <Button Grid.Column="1"
                                Text="Cancelar"
                                Command="{Binding CancelarAsignacionCommand}"
                                BackgroundColor="#E31E24"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="45"
                                CornerRadius="12"/>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>